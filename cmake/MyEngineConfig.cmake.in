@PACKAGE_INIT@

include(CMakeFindDependencyMacro)
include("${CMAKE_CURRENT_LIST_DIR}/MyEngineTargets.cmake")

find_dependency(SDL3 REQUIRED)
find_dependency(SDL3_image REQUIRED)
find_dependency(SDL3_mixer REQUIRED)
find_dependency(SDL3_ttf REQUIRED)

set(MYENGINE_VERSION "@PROJECT_VERSION@")

set(MYENGINE_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(MYENGINE_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(MYENGINE_VERSION_PATCH @PROJECT_VERSION_PATCH@)

get_target_property(MYENGINE_INCLUDE_DIRS MyEngine::MyEngine INTERFACE_INCLUDE_DIRECTORIES)

function(target_link_MyEngine target)
    target_link_libraries(${target} PRIVATE MyEngine::MyEngine)
    target_include_directories(${target} PRIVATE ${MYENGINE_INCLUDE_DIRS})
endfunction()